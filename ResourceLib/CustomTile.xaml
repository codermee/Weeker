<UserControl x:Class="ResourceLib.CustomTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Width="173" Height="173" Background="{StaticResource PhoneAccentBrush}">
        <TextBlock Height="29" Margin="60,34,62,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="20" Text="{Binding WeekText}" Width="51"/>
        <TextBlock TextWrapping="Wrap" FontSize="104" VerticalAlignment="Top" HorizontalAlignment="Center" Width="120" Foreground="White" Text="{Binding WeekNumber}" Height="120" Margin="25,24,28,0" RenderTransformOrigin="0.506,0.32"/>
    </Grid>
</UserControl>